<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bus_reservation.Activity.Update_password">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:textColor="#000000"
            />



        </LinearLayout>

    <EditText
        android:maxLength="10"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/gotham"
        android:hint="Old Password"
        android:id="@+id/oldpasswordd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/edit_border"
        />
    <EditText
        android:maxLength="10"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/gotham"
        android:hint="New Password"
        android:id="@+id/newpasswordd"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/oldpasswordd"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/edit_border"
        />

        <Button
            android:textStyle="bold"
            android:id="@+id/contnue"
            android:layout_below="@+id/newpasswordd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text="Continue"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/gotham"
            />



</RelativeLayout>
